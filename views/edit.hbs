<div class="container mt-2">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <form class="restaurant-form" action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
        <div class="row mb-3">
          <label for="name" class="col-sm-2 col-form-label">餐廳名稱</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" value="{{restaurant.name}}" required>
          </div>
        </div>
        <div class="row mb-3">
          <label for="name_en" class="col-sm-2 col-form-label">餐廳名稱(英文)</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name_en" name="name_en" value="{{restaurant.name_en}}">
          </div>
        </div>
        <div class="row mb-3">
          <label for="category" class="col-sm-2 col-form-label">餐廳種類</label>
          <div class="col-sm-10">
            <input class="form-control" list="datalistOptions" type="text" id="category" name="category" value="{{restaurant.category}}" required>
            <datalist id="datalistOptions">
              <option value="中式料理">
              <option value="日本料理">
              <option value="美式">
              <option value="義式餐廳">
              <option value="中東餐廳">
              <option value="酒吧">
              <option value="咖啡">
            </datalist>
          </div>
        </div>
        <div class="row mb-3">
          <label for="image" class="col-sm-2 col-form-label">餐廳照片網址</label>
          <div class="col-sm-10">
            <input type="url" class="form-control" id="image" name="image" value="{{restaurant.image}}">
          </div>
        </div>
        <div class="row mb-3">
          <label for="location" class="col-sm-2 col-form-label">餐廳地址</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="location" name="location" value="{{restaurant.location}}" required>
          </div>
        </div>
        <div class="row mb-3">
          <label for="phone" class="col-sm-2 col-form-label">餐廳電話</label>
          <div class="col-sm-10">
            <input type="tel" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}" required>
          </div>
        </div>
        <div class="row mb-3">
          <label for="google_map" class="col-sm-2 col-form-label">Google Map</label>
          <div class="col-sm-10">
            <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}" required>
          </div>
        </div>
        <div class="row mb-3">
          <label for="rating" class="col-sm-2 col-form-label">評分(0 ~ 5.0)</label>
          <div class="col-sm-10">
            <input type="number" step="0.1" min="0.1" max="5" class="form-control" id="rating" name="rating" value="{{restaurant.rating}}" required>
          </div>
        </div>
        <div class="row mb-3">
          <label for="description" class="col-sm-2 col-form-label">餐廳介紹</label>
          <div class="col-sm-10">
            <textarea class="form-control" id="description" rows="3" name="description" required>{{restaurant.description}}</textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </div>
</div>