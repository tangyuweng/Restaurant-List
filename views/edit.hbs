<div class="container mt-2">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <form class="restaurant-form" action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
        <h2 class="text-center p-2">新增餐廳</h2>
        <div class="row mb-3">
          <label for="name" class="col-sm-2 col-form-label">餐廳名稱</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" maxlength="40" value="{{restaurant.name}}"
              required>
            <small class="text-muted">＊必填欄位</small>
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.name}}</small>
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <label for="name_en" class="col-sm-2 col-form-label">餐廳名稱(英文)</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name_en" name="name_en" maxlength="60"
              value="{{restaurant.name_en}}">
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.name_en}}</small>
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <label for="category" class="col-sm-2 col-form-label">餐廳種類</label>
          <div class="col-sm-10">
            <select class="form-select" name="category" required>
              <option value="中式料理" {{#if (isEqual restaurant.category "中式料理" )}}selected{{/if}}>中式料理</option>
              <option value="日本料理" {{#if (isEqual restaurant.category "日本料理" )}}selected{{/if}}>日式料理</option>
              <option value="美式" {{#if (isEqual restaurant.category "美式" )}}selected{{/if}}>美式</option>
              <option value="義式餐廳" {{#if (isEqual restaurant.category "義式餐廳" )}}selected{{/if}}>義式餐廳</option>
              <option value="中東餐廳" {{#if (isEqual restaurant.category "中東餐廳" )}}selected{{/if}}>中東餐廳</option>
              <option value="酒吧" {{#if (isEqual restaurant.category "酒吧" )}}selected{{/if}}>酒吧</option>
              <option value="咖啡" {{#if (isEqual restaurant.category "咖啡" )}}selected{{/if}}>咖啡</option>
            </select>
            <small class="text-muted">＊必填欄位</small>
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.category}}</small>
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <label for="image" class="col-sm-2 col-form-label">餐廳照片網址</label>
          <div class="col-sm-10">
            <input type="url" class="form-control" id="image" name="image" value="{{restaurant.image}}"
              placeholder="請輸入網址 http://..." required>
            <small class="text-muted">＊必填欄位</small>
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.image}}</small>
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <label for="location" class="col-sm-2 col-form-label">餐廳地址</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="location" name="location" maxlength="100"
              value="{{restaurant.location}}" required>
            <small class="text-muted">＊必填欄位</small>
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.location}}</small>
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <label for="phone" class="col-sm-2 col-form-label">餐廳電話</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}"
              placeholder="02 232 4545" required pattern="[0-9]{2} [0-9]{3} [0-9]{4}">
            <small class="text-muted">＊必填欄位</small>
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.phone}}</small>
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <label for="google_map" class="col-sm-2 col-form-label">Google Map</label>
          <div class="col-sm-10">
            <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}"
              placeholder="請輸入網址 http://..." required>
            <small class="text-muted">＊必填欄位</small>
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.google_map}}</small>
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <label for="rating" class="col-sm-2 col-form-label">評分(0 ~ 5.0)</label>
          <div class="col-sm-10">
            <input type="number" step="0.1" min="0.1" max="5" class="form-control" id="rating" name="rating"
              value="{{restaurant.rating}}" required>
            <small class="text-muted">＊必填欄位</small>
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.rating}}</small>
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <label for="description" class="col-sm-2 col-form-label">餐廳介紹</label>
          <div class="col-sm-10">
            <textarea class="form-control" id="description" rows="3"
              name="description">{{restaurant.description}}</textarea>
            {{#if validation_error}}
              <small class="text-danger">{{validation_error.description}}</small>
            {{/if}}
          </div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>